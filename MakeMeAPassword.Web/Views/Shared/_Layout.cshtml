@using MurrayGrant.PasswordGenerator.Web.Helpers

<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html> <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>
            @if (String.IsNullOrEmpty(ViewBag.Title)) {
                @:Make Me a Password
            } else { 
                @ViewBag.Title @:- Make Me a Password
            }
        </title>
        <meta name="description" content="Generate a hard to guess, easy to remember password.">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <link rel="author" href="/humans.txt" />
        <link rel="shortcut icon" href="/favicon.ico" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <link rel="icon" type="image/png" href="/favicon.png" />

@if (WebBundleHelper.EmitOptimised())
{
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" />
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.min.css" />
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" />
        <link rel="stylesheet" href="~/Content/css/Site.min.css?v=@WebBundleHelper.CacheBreakerFor("~/Content/css/Site.min.css")" />
    <!--[if lte IE 8]>
        <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
}
else
{
        <link rel="stylesheet" href="~/Content/css/bootstrap.css" />
        <link rel="stylesheet" href="~/Content/css/bootstrap-theme.css" />
        <link rel="stylesheet" href="~/Content/css/font-awesome.css" />
        <link rel="stylesheet" href="~/Content/css/Site.css" />
    <!--[if lte IE 8]>
        <script src="~/Content/scripts/html5shiv.js"></script>
        <script src="~/Content/scripts/respond.js"></script>
    <![endif]-->
}
    </head>
    <body>
        <!--[if lt IE 7]>
            <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
        <![endif]-->

        @Html.Partial("_TopNavbar")

        <div class="container container-body">
            @{
                var notHttps = !String.Equals(Context.Request.Url.Scheme, "https", StringComparison.OrdinalIgnoreCase);
                var secureVersion = "https://" + Context.Request.Url.ToString().Remove(0, "http://".Length);
            }
            @if (notHttps)
            {
                <div class="alert alert-danger" id="noHttpsWarning">
                    <h4>Danger! Insecure! Danger!</h4>
                    <p>You are not accessing this site using a secure connection. Anyone can snoop on the passwords you generate.</p>
                    <p>You'll be redirected automatically to a <a href="@Html.Raw(secureVersion)">secure version</a>, or click <a href="@Html.Raw(secureVersion)">here</a>.</p>
                </div>
            }
            @RenderBody()
        </div>

        @Html.Partial("_Footer")


@if (WebBundleHelper.EmitOptimised())
{
        <script src="//code.jquery.com/jquery-1.10.2.min.js"></script>
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
        <script src="~/Content/scripts/site-main.min.js?v=@WebBundleHelper.CacheBreakerFor("~/Content/scripts/site-main.min.js")"></script>
}
else
{
        <script src="~/Content/scripts/jquery.js"></script>
        <script src="~/Content/scripts/bootstrap.js"></script>
        <script src="~/Content/scripts/site-main.js"></script>
}
        @RenderSection("scripts", required: false)
    </body>
</html>
