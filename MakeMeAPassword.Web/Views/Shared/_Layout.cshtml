    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>
            @if (String.IsNullOrEmpty(ViewBag.Title)) {
                @:Make Me a Password
            } else { 
                @ViewBag.Title @:- Make Me a Password
            }
        </title>
        <meta name="description" content="Generate a hard to guess, easy to remember password.">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <link rel="author" href="/humans.txt" />
        <link rel="shortcut icon" href="/favicon.ico" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <link rel="icon" type="image/png" href="/favicon.png" />

        @Styles.Render("~/bundles/css/bootstrap")
        @Styles.Render("~/bundles/css/bootstrap-theme")
        @Styles.Render("~/bundles/css/fontawesome")
        @Styles.Render("~/bundles/css/site")
<!--[if lte IE 8]>
        @Scripts.Render("~/bundles/scripts/modernizr")
<![endif]-->
