@{
    ViewBag.Title = "Generate - Pronouncable";
}

<h2 class="text-center">Pronouncable Password</h2>

<div id="ipBasedLimitWarning" class="alert alert-info" style="display:none;">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h4>Usage Limits</h4>
    <p>To ensure everyone can make passwords, there are <a href="/faq#usagelimit">usage limits</a> based on your IP Address.</p>
    <p>Please do not abuse this service or you will be temporarily blocked.</p>
</div>

<p>
    Generates a nonsense word, which is (at least kind of) pronouncable.
</p>
<p>
    Example: <span class="label label-default example-password">psu-zigh-soorh-alung</span>
</p>
<p>
    These are hardest to remember, but shortest to type of all the basic styles.
</p>
<p>
    The hyphens represent the breaks between syllables, to help you memorise the password.
</p>    

<div id="passwordPlace" class="well password-panel">
    <div class="panel-body">
        <span class="pw">Generating...</span>
    </div>
</div>

<div>
    <button class="btn btn-primary password-get" id="passwordGet" data-loading-text="Generating..."
            data-urlpassword="/api/v1/pronouncable/json" data-urlcombinations="/api/v1/pronouncable/combinations">
        Get Another
    </button>
    <p id="passwordError" style="display:none;">
        <i class="icon-sadface"></i>
        <span class="message"></span> <br />
        <span> Please try again later or @Html.ActionLink("Contact", "Contact", "Home") the author.</span>
    </p>
</div>

<div id="combinationsPlace" style="display:none;" class="panel panel-default combinations-panel">
    <div class="panel-heading">
        <h2>Password Quality</h2>
    </div>

    <div class="panel-body">
        <div class="rating">
            <h4></h4>
            <p></p>
        </div>
        <div class="fineprint">
            <label>Total Combination Details:</label> 
            <div class="numbers">
                <span class="label label-default formatted"></span> (<span class="label label-default base10"></span> <span class="label label-default base2"></span> bits)
            </div>
        </div>
    </div>
</div>

<div id="passwordParameters" data-pagekey="pronouncable" class="panel panel-default parameters-panel">
    <div class="panel-heading">
        <h2>Fine Tuning</h2>
    </div>

    <div class="panel-body">
        <div class="form-group">
            <label for="pwLength" class="control-label">Number of Syllables (length)</label>
            <input type="number" class="form-control" name="sc" id="pwLength" value="4" />
        </div>

        <div class="form-group">
            <label for="pwCount" class="control-label">Number of Passwords</label>
            <input type="number" class="form-control" name="c" id="pwCount" value="1" />
        </div>

        <div class="form-group">
            <label for="pwHyphans" class="control-label">Include Hyphans Between Syllables</label>
            <div class="checkbox-inline checkbox-right">
                <input type="checkbox" class="checkbox" name="dsh" id="pwHyphans" value="y" data-uncheckedvalue="n" checked="checked" />
            </div>
        </div>
    </div>
</div>

<button class="btn btn-primary password-get" data-loading-text="Generating..."
        data-urlpassword="/api/v1/pronouncable/json" data-urlcombinations="/api/v1/pronouncable/combinations">
    Get Another
</button>
